{
  "name": "megaex-telegram-bot",
  "version": "1.0.0",
  "description": "P2P crypto exchange bot for Telegram",
  "main": "index.js",
  "scripts": {
    "serve": "yarn build && node dist/src/index.js",
    "build": "./node_modules/typescript/bin/tsc",
    "watch": "node_modules/nodemon/bin/nodemon.js -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "node_modules/ts-node/dist/bin.js --files src/index.ts",
    "db:create": "node_modules/.bin/sequelize db:create",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "lint": "./node_modules/tslint/bin/tslint -p ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "2.0.1",
    "bignumber.js": "8.0.1",
    "bluebird": "3.5.1",
    "bull": "^3.7.0",
    "cron": "1.3.0",
    "dotenv": "^6.2.0",
    "express": "4.16.2",
    "i18next": "15.0.6",
    "jsonwebtoken": "8.2.0",
    "kue": "0.11.6",
    "lodash": "4.17.11",
    "moment": "2.22.0",
    "node-telegram-bot-api": "0.30.0",
    "pg": "7.4.1",
    "pg-hstore": "2.3.2",
    "qrcode": "1.2.0",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.12",
    "request": "2.88.0",
    "request-promise": "4.2.2",
    "sequelize": "4.36.1",
    "sequelize-typescript": "0.6.3",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "2.0.0",
    "@types/bull": "^3.5.7",
    "@types/chai": "4.1.2",
    "@types/cron": "1.3.0",
    "@types/express": "4.11.1",
    "@types/i18n": "0.8.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/kue": "0.11.8",
    "@types/mocha": "5.0.0",
    "@types/node-telegram-bot-api": "0.28.2",
    "@types/qrcode": "0.8.1",
    "@types/redis": "^2.8.10",
    "@types/request": "2.47.0",
    "@types/request-promise": "4.1.41",
    "chai": "4.1.2",
    "husky": "1.3.1",
    "mocha": "5.0.5",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "sequelize-cli": "^5.4.0",
    "ts-node": "8.0.2",
    "tslint": "5.11.0",
    "typescript": "3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "./node_modules/prettier/bin-prettier.js --config .prettierrc **/*.ts --write"
    }
  }
}
